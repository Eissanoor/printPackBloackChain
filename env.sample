# Blockchain Configuration
# Replace these values with your actual blockchain credentials
BLOCKCHAIN_RPC_URL=https://rpc-url-for-your-blockchain-network
BLOCKCHAIN_PRIVATE_KEY=your-private-key-without-0x-prefix
CONTRACT_ADDRESS=your-deployed-contract-address

# Database Configuration
DATABASE_URL=";encrypt=true;trustServerCertificate=true;connectTimeout=30000;"

# Blockchain Settings
# Set to 'true' to enable blockchain integration, 'false' to disable
BLOCKCHAIN_ENABLED=true

# Mock Mode Settings
# Set to 'true' to use mock data instead of real blockchain data
USE_MOCK_MODE=false
# Set to 'true' to allow falling back to mock mode if blockchain operations fail
ALLOW_MOCK_FALLBACK=true
# Set to 'true' to force mock mode for all blockchain read operations
FORCE_MOCK_MODE=false

# Network Configuration
# Options: mainnet, ropsten, rinkeby, goerli, kovan, or custom
BLOCKCHAIN_NETWORK=goerli

# Hardhat Deployment Configuration
# RPC URLs for different networks
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-infura-key
GOERLI_RPC_URL=https://goerli.infura.io/v3/your-infura-key
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your-infura-key

# Your private key for contract deployment (with 0x prefix)
PRIVATE_KEY=0xyour-private-key-with-funds

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your-etherscan-api-key
