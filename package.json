{
  "name": "printpack-blockchain",
  "version": "1.0.0",
  "description": "Blockchain integration for Print & Pack product sync approvals",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node src/test-web3.js",
    "blockchain": "node src/index.js",
    "ganache": "node scripts/start-ganache.js",
    "ganache-win": "scripts\\start-ganache-windows.bat",
    "compile": "node scripts/compile-contract.js",
    "setup": "node scripts/setup-environment.js",
    "setup-ganache": "node scripts/ganache-setup.js",
    "deploy-and-seed": "node scripts/deploy-and-seed.js",
    "deploy-contract": "node scripts/deploy-contract.js",
    "deploy-simple": "npm run compile && node scripts/deploy-simple.js",
    "record-approvals": "node scripts/record-approvals.js",
    "simple-setup": "node scripts/simple-ganache-setup.js",
    "setup-local": "node scripts/setup-local-env.js",
    "deploy:local": "node scripts/deploy-web3.js",
    "deploy:sepolia": "node scripts/deploy-web3.js",
    "real-mode": "npm run deploy-simple && npm run dev",
    "real-data-mode": "npm run ganache & npm run deploy-simple && npm run dev",
    "real-data-mode-win": "start npm run ganache-win && npm run deploy-simple && npm run dev",
    "all-in-one": "node scripts/run-all.js"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "product",
    "sync"
  ],
  "author": "Print & Pack",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "ganache": "^7.9.2",
    "solc": "^0.8.9"
  }
}
